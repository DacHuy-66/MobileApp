<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".Question_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="409dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E9E7E7"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/btn_back1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="375dp"
            android:background="@drawable/back_edit"
            app:backgroundTint="@null"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="412dp"
        android:layout_height="239dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_content_question"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_marginTop="20dp"
            android:background="#001233"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:textColor="#EDEDED"
            android:textSize="30sp">
        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/txt_edit"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FFEB3B"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_help1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="324dp"
        android:background="@drawable/txt_help_edit"
        app:drawableTopCompat="@drawable/baseline_percent_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_help2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/txt_help_edit"
        app:drawableTopCompat="@drawable/baseline_next_plan_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_help4"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="180dp"
        android:background="@drawable/txt_help_edit"
        app:drawableTopCompat="@drawable/baseline_lightbulb_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_answer1"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/txt_answer_edit"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_answer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/tv_answer2"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/txt_answer_edit"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_answer3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer1"
        app:layout_constraintVertical_bias="0.353" />

    <TextView
        android:id="@+id/tv_answer3"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/txt_answer_edit"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tv_answer4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer2"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/tv_answer4"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/txt_answer_edit"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer3"
        app:layout_constraintVertical_bias="0.731" />

</androidx.constraintlayout.widget.ConstraintLayout>